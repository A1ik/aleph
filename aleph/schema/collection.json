{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "collection.json#",
    "type": "object",
    "properties": {
        "label": {
            "type": "string",
            "minLength": 2,
            "maxLength": 255
        },
        "managed": {
            "type": "boolean"
        },
        "private": {
            "type": "boolean"
        },
        "generate_entities": {
            "type": "boolean"
        },
        "category": {
            "type": "string",
            "format": "collection-category"
        }
    },
    "required": ["label"]
}
